.about-me
  h3 Autor: 
    a(href='/user/#{data.user.name.username}')= data.user.name.username
  p
    a(href='/user/#{data.user.name.username}')
      img(src='/images/users/#{data.user.name.username}_small.jpg', class="align-left")
    = data.user.bio.about

  .clearfix

  p.small
    label Website/Blog:
    br
    a(href='#{data.user.bio.website}')= data.user.bio.website
    br
    label GitHub:
    br
    a(href='#{data.user.bio.github}')= data.user.bio.github
    br  
    label Twitter:
    br
    a(href='#{data.user.bio.twitter}')= data.user.bio.twitter

- if (data.posts.length)
  .sidemenu.popular
    h3 Jo≈° od istog autora
    ul
      - each post in data.posts
        li
          a(href='/post/#{post.titleUrl}')= substring(post.title)

.sidemenu.popular!= partial('site/_aboutShort')