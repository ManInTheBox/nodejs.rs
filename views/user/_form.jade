form(action='/register', method='POST')
  - if ('undefined' !== typeof user)
    div(class='errorSummary')
      ul
        - for (var e in user.errors)
          li= user.errors[e].type
          
  label(for='user_name_first') Ime: 
  input(type='text', id='user_name_first', name='user[name][first]', value=(('undefined' !== typeof user) ? user.name.first : null), class=(('undefined' !== typeof user && 'undefined' !== typeof user.errors["name.first"]) ? 'error' : null))
  br
  label(for='user_name_last') Prezime: 
  input(type='text', id='user_name_last', name='user[name][last]', value=(('undefined' !== typeof user) ? user.name.last : null), class=(('undefined' !== typeof user && 'undefined' !== typeof user.errors["name.last"]) ? 'error' : null))
  br
  label(for='user_email') E-mail: 
  input(type='text', id='user_email', name='user[email]', value=(('undefined' !== typeof user) ? user.email : null), class=(('undefined' !== typeof user && 'undefined' !== typeof user.errors["email"]) ? 'error' : null))
  br
  label(for='user_password') Lozinka: 
  input(type='password', id='user_password', name='user[password]', value=(('undefined' !== typeof user) ? user.password : null), class=(('undefined' !== typeof user && 'undefined' !== typeof user.errors["password"]) ? 'error' : null))
  br
  input(type='submit', value='Registruj se')
  
