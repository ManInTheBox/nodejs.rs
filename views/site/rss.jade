<?xml version="1.0" encoding="UTF-8"?>
feed(xmlns="http://www.w3.org/2005/Atom")
  title Node Srbija
  id http://nodejs.rs/
  updated= Date()
  link(rel="alternate", type="text/html", href="http://nodejs.rs/")
  link(rel="self", type="application/atom+xml", href="http://nodejs.rs/feed.atom")
  - each post in posts
    entry(xmlns:xhtml="http://www.w3.org/1999/xhtml")
      title(type="html") <![CDATA[#{post.title}]]>
      published= post.createdAt
      updated= post.updatedAt
      link(rel="alternate", type="text/html", href="http://nodejs.rs/post/#{post.titleUrl}")
      id http://nodejs.rs/post/#{post.titleUrl}
      author
        name <![CDATA[#{post._owner.name.username}]]>
      content(xmlns:xhtml="http://www.w3.org/1999/xhtml", type="xhtml")<![CDATA[#{post.content}]]>